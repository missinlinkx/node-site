<!DOCTYPE html>
<html>
  <head>
    <title><%- defineContent('title') %></title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <header>

      <nav class="navbar navbar-inverse">
        <div class="container">
          <a href="/" class="navbar-brand">someone's site</a>
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/levs-html-page">Levenshtein distance calculator</a></li>
            <li><a href="/hanois-html-page">Towers of Hanoi</a></li>
            <li><a href="/pals-html-page">Palindrome solver</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if (locals.loggedIn === true) { %>
              <!-- <li><a> <%= 'Hello, ' + locals.username + '!' %> </a></li> -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= 'Hello, ' + locals.username + '!' %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/logout">Log out</a></li>
                </ul>
              </li>
            <% } else { %>
              <li><a href="/login">Log in</a></li>
            <% } %>
          </ul>
        </div>
      </nav>

    </header>

<% if (locals.flashes.errorMessage) { %>
  <div class="container">
    <div class="alert alert-danger" role="alert">
      <%= locals.flashes.errorMessage %>
    </div>
  </div>
<% } %>

<% if (locals.flashes.successMessage) { %>
  <div class="container">
    <div class="alert alert-success" role="alert">
      <%= locals.flashes.successMessage %>
    </div>
  </div>
<% } %>

<!-- MAIN CONTENT HERE -->
<%- defineContent('hero') %>

    <main>
      <div class="container">
        <%- body %>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">le site &copy; 2016</p>
      </div>
    </footer>

    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>
